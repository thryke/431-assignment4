<%= link_to("<< Back to List", books_path, :class => 'back-link') %>

<div class="books edit">
  <h2>Update Book</h2>

  <%= form_for(@book) do |f| %>

    <table summary="Book detail view">                                            
      <tr>                                                                        
        <th>Title</th>                                                            
        <td><%= f.text_field(:title)  %></td>                                               
      </tr>                                                                       
      <tr>                                                                        
        <th>Author</th>                                                           
        <td><%= f.text_field(:author) %></td>                                              
      </tr>                                                                       
      <tr>                                                                        
        <th>Genre</th>                                                            
        <td><%= f.text_field(:genre) %></td>                                               
      </tr>                                                                       
      <tr>                                                                        
        <th>Price</th>                                                            
        <td><%= f.number_field(:price) %></td>                                               
      </tr>                                                                       
      <tr>                                                                        
        <th>Date Published</th>                                                   
        <td><%= f.text_field(:publisheddate) %></td>                                       
      </tr>                                                                       
    </table>

    <div class="form-button">
      <%= f.submit("Update Book") %>
    </div>

  <% end %>
</div>
